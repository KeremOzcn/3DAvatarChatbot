# =============================================================================
# AMICA API & STORAGE
# =============================================================================
NEXT_PUBLIC_DEVELOPMENT_BASE_URL=http://localhost:3000
NEXT_PUBLIC_AMICA_API_URL=https://store.heyamica.com
NEXT_PUBLIC_AMICA_STORAGE_URL=https://vrm.heyamica.com/file/amica-vrm
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# CHATBOT BACKEND - Hangi AI modelini kullanacağınızı seçin
# =============================================================================
# Seçenekler: ollama, gemini, openai, llamacpp, koboldai, echo
NEXT_PUBLIC_CHATBOT_BACKEND=gemini

# -----------------------------------------------------------------------------
# OLLAMA Configuration (Yerel AI - Ücretsiz)
# -----------------------------------------------------------------------------
# Ollama'yı https://ollama.ai adresinden indirin
# Terminal: ollama pull qwen3:8b
NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434
NEXT_PUBLIC_OLLAMA_MODEL=qwen3:8b

# -----------------------------------------------------------------------------
# GEMINI Configuration (Google AI - Ücretsiz API)
# -----------------------------------------------------------------------------
# API Key: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_APIKEY=your_gemini_api_key_here
NEXT_PUBLIC_GEMINI_MODEL=gemini-2.0-flash-exp

# =============================================================================
# TEXT-TO-SPEECH (TTS) - Ses sentezi
# =============================================================================
# Seçenekler: elevenlabs, openai_tts, piper, coqui, speecht5
NEXT_PUBLIC_TTS_BACKEND=elevenlabs

# -----------------------------------------------------------------------------
# ElevenLabs TTS (Premium - En iyi kalite)
# -----------------------------------------------------------------------------
# API Key: https://elevenlabs.io/
NEXT_PUBLIC_ELEVENLABS_APIKEY=your_elevenlabs_api_key_here
NEXT_PUBLIC_ELEVENLABS_VOICEID=your_voice_id_here
NEXT_PUBLIC_ELEVENLABS_MODEL=eleven_multilingual_v2

# =============================================================================
# SPEECH-TO-TEXT (STT) - Ses tanıma
# =============================================================================
# Seçenekler: whispercpp, whisper_browser, openai_whisper, none
NEXT_PUBLIC_STT_BACKEND=whispercpp

# -----------------------------------------------------------------------------
# Whisper.cpp (Yerel - Ücretsiz)
# -----------------------------------------------------------------------------
# https://github.com/ggerganov/whisper.cpp
# Port 8081'de çalıştırın
NEXT_PUBLIC_WHISPERCPP_URL=http://localhost:8081

# =============================================================================
# LANGUAGE & BOT SETTINGS
# =============================================================================
# Dil: tr (Türkçe) veya en (İngilizce)
NEXT_PUBLIC_LANGUAGE=tr

# Bot Adı
NEXT_PUBLIC_NAME=Mika

# System Prompt - Bot'un davranışını belirler
NEXT_PUBLIC_SYSTEM_PROMPT=You are a helpful AI assistant. Be friendly, concise, and informative. Use emotional expressions: [happy], [neutral], [serious], [surprised], [relaxed].

